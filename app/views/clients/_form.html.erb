<%= form_for(@client) do |client_form| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= client_form.label :name %><br />
    <%= client_form.text_field :name %>
  </div>
  <div class="field">
    <%= client_form.label :previous_school %><br />
    <%= client_form.select :previous_school, School.order('name asc').all.collect { |c| [ c.name, c.name ] }, { :include_blank => true } %>
  </div>
  <div class="field">
    <%= client_form.label :admission_date%><br />
    <%= client_form.date_select :admission_date, :include_blank => true, :start_year => Time.now.year, :end_year => 1991 %>
  </div>
  <div class="field">
    <%= client_form.label :discharge_date %><br />
    <%= client_form.date_select :discharge_date, :include_blank => true, :start_year => Time.now.year, :end_year => 1991 %>
  </div>
  <div class="field">
    <%= client_form.label :iep_date %><br />
    <%= client_form.date_select :iep_date, :include_blank => true, :start_year => Time.now.year, :end_year => 1991 %>
  </div>
  <div class="field">
    <%= client_form.label :classification_id, "Billing Classification" %><br />
    <%= client_form.select :classification_id, Classification.all.collect { |c| [ c.display_name, c.id ] }, { :include_blank => true } %>
  </div>
  <div class="actions">
    <%= client_form.submit %>
  </div>
<% end %>

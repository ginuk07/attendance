<h1>Listing Clients</h1>

<table width="100%">
  <tr>
    <th>Name</th>
    <th>Previous School</th>
    <th>Admission Date</th>
    <th>Actions</th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.school.name unless client.school == nil %></td>
    <td><%= client.admission_date %></td>
    <td><%= link_to 'Show', client %> |
      <%= link_to 'Attendance', attendance_client_path(client) %> |
      <%= link_to 'Edit', edit_client_path(client) %> |
      <%= link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


    Client:<%= f.select :client_id, Client.all.collect {|c| [ c.name, c.id ]}, { :include_blank => true } %>
  </div>
  <div class="field">
    Status:<%= f.select "status", ["Present", "Tardy", "Unexcused Absence", "Excused Absence", "School Closed", "Suspended"], { :include_blank => true }  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
